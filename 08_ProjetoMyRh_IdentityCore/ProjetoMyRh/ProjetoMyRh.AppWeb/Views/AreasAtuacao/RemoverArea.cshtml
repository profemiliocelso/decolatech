@model ProjetoMyRh.AppWeb.Models.Entities.Area

@{
    ViewData["Title"] = "Remover Area";
}


<h3>Tem certeza que deseja remover a área de atuação '@Model.Descricao' ?</h3>
<div>
    
    <form asp-action="RemoverArea">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Sim, remover" class="btn btn-danger" /> |
        <a asp-action="ListarAreas">Não, voltar para a lista</a>
    </form>
</div>
